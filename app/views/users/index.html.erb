<p id="notice"><%= notice %></p>
<h1 style="color:red;text-align:center;font-family:'Georgia';font-style: italic"><b>Scoreboard</b></h1>
<br><br><br>
<center>
<b><%= link_to 'Home',root_path, class: 'button' %></b>
<b><%= link_to 'Daily Winners list',winners_path, class: 'button' %></b>
</center>
<br><br><br>
<table id='scoreboard'>
  <thead>
    <tr>
      <th>Rank <span style="font-size: 150%">🏆</span> </th>
      <th>Players</th>
      <th>Point</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each_with_index do |user, i| %>
      <tr>
        <td>
          <%if i ==0 %>
          <%= i+1 %>
          <% else %>
            <%= i+1 %>
          <%end%>
        </td>
        
        <td>
          <%if i ==0 %>
            <b><%= user.name %></b><span style="font-size: 200%">🥇</span>
            <%elsif i==1%>
            <b><%= user.name %></b><span style="font-size: 200%">🥈</span>
            <%elsif i==2%>
            <b><%= user.name %></b><span style="font-size: 200%">🥉</span>
          <% else %>
            <b><%= user.name %></b>
          <%end%>
        </td>
        
        <td style='color:blue'><b><%= user.point %></b></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>